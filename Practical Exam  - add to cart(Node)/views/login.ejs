<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup</title>
    <link rel="stylesheet" href="style.css">
    <style>
        /* Body Styling */
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Form Container */
        .container {
            width: 350px;
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        /* Form Styling */
        .form-container {
            display: none;
        }

        .form-container.active {
            display: block;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: 0.3s;
        }

        .form-control:focus {
            border-color: #2a5298;
            box-shadow: 0 0 5px rgba(42, 82, 152, 0.5);
            outline: none;
        }

        .btn {
            width: 100%;
            padding: 12px;
            background: #2a5298;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn:hover {
            background: #1e3c72;
        }

        .links {
            margin-top: 10px;
        }

        .links a {
            color: #2a5298;
            text-decoration: none;
            font-size: 14px;
        }

        .links a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Login Form -->
        <div class="form-container active" id="login-container">
            <h2>Login</h2>
            <form id="login-form" method="post" action="/loginuser">
                <input type="text" class="form-control" id="username" name="email" placeholder="Email" required>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                <button type="submit" class="btn">Login</button>
                <div class="links">
                    <a href="#" id="forgot-password-link">Forgot password?</a> | 
                    <a href="#" id="register-link">Sign Up</a>
                </div>
            </form>
        </div>

        <!-- Register Form -->
        <div class="form-container" id="signup-container">
            <h2>Register</h2>
            <form id="signup-form" method="post" action="/registeruser">
                <input type="text" class="form-control" id="signup-username" name="name" placeholder="Username" required>
                <input type="email" class="form-control" id="signup-email" name="email" placeholder="Email" required>
                <input type="password" class="form-control" id="signup-password" name="password" placeholder="Password" required>
                <button type="submit" class="btn">Sign Up</button>
                <div class="links">
                    <a href="#" id="back-to-login-link">Back to Login</a>
                </div>
            </form>
        </div>

        <!-- Forgot Password Form -->
        <div class="form-container" id="forget-container">
            <h2>Forgot Password</h2>
            <form id="forget-form" method="post" action="/forgotpassword">
                <input type="email" class="form-control" id="forget-email" name="useremail" placeholder="Enter your registered email" required>
                <button type="submit" class="btn">Reset Password</button>
                <div class="links">
                    <a href="#" id="back-to-login-from-forget-link">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Form Switching Logic
        document.getElementById("register-link").addEventListener("click", function () {
            switchForm("signup-container");
        });

        document.getElementById("forgot-password-link").addEventListener("click", function () {
            switchForm("forget-container");
        });

        document.getElementById("back-to-login-link").addEventListener("click", function () {
            switchForm("login-container");
        });

        document.getElementById("back-to-login-from-forget-link").addEventListener("click", function () {
            switchForm("login-container");
        });

        function switchForm(showForm) {
            document.querySelectorAll(".form-container").forEach(form => {
                form.classList.remove("active");
            });
            document.getElementById(showForm).classList.add("active");
        }
    </script>
</body>
</html>
